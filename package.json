{
  "name": "codementor-mcp",
  "version": "3.3.0",
  "description": "Local-first AI-powered codebase analysis tool for stdio or HTTP transports using environment-supplied provider credentials.",
  "main": "dist/index.js",
  "bin": {
    "codementor": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "CURSOR_SETUP.md",
    "claude_desktop_config.example.json",
    "cursor_mcp_config.json"
  ],
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fuko2935/codementor.git"
  },
  "bugs": {
    "url": "https://github.com/fuko2935/codementor/issues"
  },
  "homepage": "https://github.com/fuko2935/codementor#readme",
  "scripts": {
    "build": "tsc && npm run copy:templates",
    "copy:templates": "ts-node --esm scripts/copy-assets.ts",
    "start": "node dist/index.js",
    "start:local": "ts-node -r dotenv/config src/index.ts",
    "start:stdio": "node dist/index.js",
    "start:http": "MCP_TRANSPORT_TYPE=http node dist/index.js",
    "rebuild": "ts-node --esm scripts/clean.ts && npm run build",
    "docs:generate": "typedoc --tsconfig ./tsconfig.typedoc.json",
    "depcheck": "npx depcheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "tree": "ts-node --esm scripts/tree.ts",
    "fetch-spec": "ts-node --esm scripts/fetch-openapi-spec.ts",
    "format": "prettier --write \"**/*.{ts,js,json,md,html,css}\"",
    "inspector": "npx mcp-inspector --config mcp.json --server mcp-ts-template",
    "validate:startup": "npm run build && node dist/validation/startupValidation.js",
    "test:integration": "node -e \\\"console.log(\\\\\"tests disabled\\\\\")\\\"",
    "test:logger": "node -e \\\"console.log(\\\\\"tests disabled\\\\\")\\\"",
    "test:unit": "node -e \\\"console.log(\\\\\"tests disabled\\\\\")\\\"",
    "test:all": "node -e \\\"console.log(\\\\\"tests disabled\\\\\")\\\"",
    "audit:deps": "npm audit",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "dependencies": {
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.3",
    "@google/generative-ai": "^0.24.1",
    "@hono/node-server": "^1.15.0",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@types/node": "^24.0.10",
    "@types/sanitize-html": "^2.16.0",
    "@types/validator": "13.15.2",
    "ai": "^5.0.51",
    "ai-sdk-provider-gemini-cli": "^1.1.1",
    "chrono-node": "^2.8.0",
    "dotenv": "^16.6.1",
    "glob": "^11.0.3",
    "hono": "^4.10.4",
    "ignore": "^7.0.5",
    "openai": "^5.8.2",
    "partial-json": "^0.1.7",
    "sanitize-html": "^2.17.0",
    "simple-git": "^3.30.0",
    "tiktoken": "^1.0.21",
    "validator": "^13.15.20",
    "web-tree-sitter": "^0.25.10",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0",
    "zod": "^3.25.74",
    "zod-to-json-schema": "^3.23.5"
  },
  "optionalDependencies": {
    "ioredis": "^5.4.1",
    "tree-sitter-c-sharp": "^0.20.4",
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-java": "^0.20.4",
    "tree-sitter-php": "^0.20.3",
    "tree-sitter-python": "^0.20.4",
    "tree-sitter-ruby": "^0.20.3",
    "tree-sitter-rust": "^0.20.4"
  },
  "keywords": [
    "typescript",
    "mcp",
    "model-context-protocol",
    "architecture",
    "error-handling",
    "llm",
    "ai-integration",
    "mcp-server",
    "mcp-client",
    "hono",
    "stdio",
    "http",
    "authentication",
    "oauth",
    "jwt",
    "openrouter",
    "zod",
    "local",
    "cli",
    "gemini",
    "gemini-cli",
    "cursor",
    "cursor-ai",
    "ai-assistant"
  ],
  "author": "cyanheads <casey@caseyjhand.com> (https://github.com/cyanheads/mcp-ts-template#readme)",
  "license": "Apache-2.0",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/cyanheads"
    },
    {
      "type": "buy_me_a_coffee",
      "url": "https://www.buymeacoffee.com/cyanheads"
    }
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/babel__traverse": "^7.28.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "axios": "^1.10.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  }
}
